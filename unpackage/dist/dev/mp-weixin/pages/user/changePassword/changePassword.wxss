
.header {
	height: 400rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	background-color: #f0f8ff;
	border-bottom: 1rpx solid black;
}
.name, .phone {
	font-size: 100%;
}
.name {
	margin-top: 30rpx;
	margin-bottom: 20rpx;
}
input {
	margin-top: 20rpx;
	margin-bottom: 20rpx;
	height: 100rpx;
	border: 1rpx solid black;
	border-radius: 10rpx;
	padding-left: 10rpx;
}
.submitButton {
	margin-top: 100rpx;
	background-color: #f0f8ff;
}

